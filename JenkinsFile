pipeline {
    agent any

    stages {
        stage('Building'){
        	steps{
        		sh 'pwd'
        		sh 'chmod 777 build.sh'
        		sh 'ls -alrt'
        		sh './build.sh'
        	}       	
        }
        stage('Ansible Playbook Launch'){
            steps{
                ansiblePlaybook(
                    inventory: '$WORKSPACE/jenkins_integration/inventory.ini'
                    playbook: '${WORKSPACE}/jenkins_integration/site.yml',
                    colorized: false
                )
            }
            
        }
        stage('Artifacts '){
        	steps{ 
        		archiveArtifacts artifacts: 'build/src/serialize'
        	}       	
        }
    }
}
